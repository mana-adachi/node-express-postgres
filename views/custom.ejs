body {
    background-color: #f8f9fa;
    font-family: 'Arial', sans-serif;
  }
  
  h1, h2 {
    color: #6c757d;
  }
  
  form {
    background-color: #ffffff;
    border-radius: 10px;
  }
  
  .btn-primary {
    background-color: #ff6b6b;
    border-color: #ff6b6b;
  }
  
  .btn-primary:hover {
    background-color: #ff4757;
    border-color: #ff4757;
  }
  
  .list-group-item {
    background-color: #fff;
    border: 1px solid #dee2e6;
    border-radius: 5px;
    margin-bottom: 10px;
  }
  
  .list-group-item .badge {
    background-color: #ff6b6b;
  }
  