<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="css/bootstrap.min.css">
  <link rel="stylesheet" href="css/custom.css">
</head>
<body>
  <%- include('./error_messages'); %>
  <%- include('./header'); %>
  <% if(isAuth) { %>
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-6">
          <form action="/" method="post" class="p-4 rounded shadow-sm bg-light">
            <h2 class="mb-4">タスクの追加</h2>
            <div class="form-group">
              <input required type="text" name="add" class="form-control" placeholder="何をする?" />
            </div>
            <button type="submit" class="btn btn-primary w-100">追加</button>
          </form>
        </div>
        <div class="col-md-6">
          <ul class="list-group">
            <% for(let todo of todos){ %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= todo.content %>
                <span class="badge badge-primary badge-pill">Done</span>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="text-center mt-5">
      <h1 class="mb-4">Welcome to the dream TodoApp for you!</h1>
      <a class="btn btn-primary btn-lg" href="/signup" role="button">Sign up now!</a>
    </div>
  <% } %>
  <script src="js/jquery-3.3.1.slim.min.js"></script>
  <script src="js/popper.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
</body>
</html>
